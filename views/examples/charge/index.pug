extends ../layout

block example-content
  if error
    .alert.alert-danger
      | <strong>Error:</strong> #{ JSON.stringify(error.message) }

  .product-display
    .product-img
      img(src=product.imgURL)
    .product-information
      h2.product-name
        = product.name
      .product-rating
        - for (var i = 0; i < product.rating; i++)
          | â˜…
      .product-price(class=product.offer ? 'offer' : '')
        = '$' + product.price
      p.product-description
        = product.description

      form(method='POST' action='/examples/charge/pay')
        input(type='hidden' name='productID' value=product.id)
        button.btn.btn-primary(type='submit') Pagar $#{ product.price }

